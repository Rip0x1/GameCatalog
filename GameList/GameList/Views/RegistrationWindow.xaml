<Window x:Class="WpfApp1.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="530"
        Style="{StaticResource MaterialDesignWindow}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FAFAFA">
    <Grid>
        <Border Padding="25" Margin="20" Background="White" BorderBrush="#B0BEC5" BorderThickness="1.5" CornerRadius="12" HorizontalAlignment="Center" VerticalAlignment="Center"
                Effect="{DynamicResource MaterialDesignElevationShadow4}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Введите данные для регистрации" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="#263238"/>
                <TextBlock Text="Имя пользователя:" FontWeight="SemiBold"/>
                <TextBox Name="NameTextBox" Margin="0,0,0,15" Height="30" BorderBrush="#90A4AE" BorderThickness="1" Padding="5"/>
                <TextBlock Text="Введите пароль:" FontWeight="SemiBold"/>
                <PasswordBox Name="PasswordBox" Margin="0,0,0,15" Height="30" BorderBrush="#90A4AE" BorderThickness="1" Padding="5"/>
                <Button Content="Зарегистрироваться" Height="38" Background="#0288D1" Foreground="White" FontWeight="SemiBold" Click="RegisterButton_Click" BorderThickness="0"/>
                <Button Content="Назад" Height="38" Background="#D32F2F" Foreground="White" FontWeight="SemiBold" Margin="0, 10, 0, 0" Click="BackButton_Click" BorderThickness="0"/>
                <TextBlock Name="StatusTextBlock1" Foreground="#D32F2F" Visibility="Visible" Margin="0,10,0,0" FontWeight="Bold" FontSize="12" TextAlignment="Center"/>
                <TextBlock Name="StatusTextBlock2" Foreground="#D32F2F" Visibility="Visible" Margin="0,5,0,0" FontWeight="Bold" FontSize="12" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
