<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="550" Width="800"
        Style="{StaticResource MaterialDesignWindow}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FAFAFA">
    <Grid>
        <Border Padding="30" Margin="40" BorderBrush="#B0BEC5" BorderThickness="2" CornerRadius="15" Background="White" 
                Effect="{DynamicResource MaterialDesignElevationShadow6}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" >
                <TextBlock Text="Добро пожаловать" FontSize="36" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Foreground="#263238"/>
                <TextBlock Name="StatusTextBlock1" Foreground="#D32F2F" Visibility="Visible" Text="Пожалуйста, войдите в систему или зарегистрируйтесь, чтобы просмотреть игровой каталог." Margin="10" FontWeight="SemiBold" TextWrapping="Wrap" TextAlignment="Center"/>

                <Button Content="Регистрация" Margin="10" Width="220" Height="40" Background="#0288D1" Foreground="White" FontWeight="SemiBold" Click="RegisterButton_Click" 
                        BorderThickness="0"/>
                <Button Content="Авторизация" Margin="10" Width="220" Height="40" Background="#0288D1" Foreground="White" FontWeight="SemiBold" Click="LoginButton_Click"
                        BorderThickness="0" />
                <Button Content="Показать все игры" Margin="10" Width="220" Height="40" Background="#0288D1" Foreground="White" FontWeight="SemiBold" Click="ShowAllGamesButton_Click"
                        BorderThickness="0"/>
                <Button Content="Выход" Margin="10" Width="220" Height="40" Background="#D32F2F" Foreground="White" FontWeight="SemiBold" Click="ExitButton_Click"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
